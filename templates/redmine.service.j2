[Unit]
Description=Redmine Unicorn Server
{% if redmine_db_cfg.production.host is defined and redmine_db_cfg.production.host == 'localhost' -%}
{% if redmine_db_cfg.production.adapter in 'mysql2'%}
Wants=mariadb.service
After=network.target mysqld.service
{% endif -%}
{% if redmine_db_cfg.production.adapter == 'postgresql' -%}
Wants=postgresql.service
After=network.target postgresql.service
{% endif -%}
{% else -%}
After=network.target
{% endif %}

[Service]
Type=simple
Restart=always
User={{ redmine_user }}
WorkingDirectory={{ redmine_home }}
ExecStart=/usr/bin/bundle exec puma -C {{ redmine_home }}/config/puma.rb -e production
ExecStop=/bin/kill -TERM $MAINPID
ExecReload=/bin/kill -HUP $MAINPID

[Install]
WantedBy=multi-user.target
